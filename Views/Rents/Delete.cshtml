@model LibraryApp.Models.RentsModel

@{
    ViewData["Title"] = "Kiralananlar";
    Layout = "_Layout";
}
<br />
<h1>Kiralananlar</h1>
<br />
<h3>Kira Kaydını Sil</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.KiralananID)-->İşlem No.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KiralananID)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.KitapID)-->Kitap No.
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KitapID)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.KullaniciID)-->Kullanıcı No.
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KullaniciID)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.AlisTarihi)-->Kiralama Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlisTarihi)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.IadeTarihi)-->Kira Bitiş Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IadeTarihi)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.GeriGetirmeTarihi)-->İade Edilen Tarih
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GeriGetirmeTarihi)
        </dd>
    </dl>
    <hr />
    <br />
    <h5>Bu kaydı silmek istediğinize emin misiniz?</h5>
    <form asp-action="Delete" class="btn-group-sm">
        <input type="hidden" asp-for="KiralananID" />
        <input type="submit" value="Kaydı Sil" class="btn btn-danger" /> 
        <a asp-action="All" class="btn btn-primary">Geri Dön</a>
    </form>
</div>
