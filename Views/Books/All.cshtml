@model IEnumerable<LibraryApp.Models.BooksModel>

@{
    ViewData["Title"] = "Kitaplar";
    Layout = "_Layout";
}
<br />
<h1>Kitaplar</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Kitap Girdisi Oluştur</a> <a asp-area="" asp-controller="Home" asp-action="Panel" class="btn btn-primary">Geri Dön</a>
</p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                <!--@Html.DisplayNameFor(model => model.KitapID)-->Kitap No.
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Baslik)-->Kitap İsmi
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Yazar)-->Yazar
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.YayinYili)-->Yayın Yılı
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Tur)-->Tür
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.ISBN)-->ISBN No.
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.RafNumarasi)-->Raf No.
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Durum)-->Durum
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KitapID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yazar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YayinYili)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RafNumarasi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            <td class="btn-group-vertical btn-group-sm">
                <a asp-action="Details" asp-route-id="@item.KitapID" class="btn btn-success">İncele</a>
                <a asp-action="Edit" asp-route-id="@item.KitapID" class="btn btn-warning">Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.KitapID" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>