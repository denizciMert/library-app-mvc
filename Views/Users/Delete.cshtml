@model LibraryApp.Models.UsersModel

@{
    ViewData["Title"] = "Kullanıcıyı Sil";
    Layout = "_Layout";
}
<br />
<h1>Kullanıcılar</h1>
<br />
<div>
    <h4>Kullanıcıyı Sil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.KullaniciID)-->Kullanıcı No.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KullaniciID)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Adi)--> İsim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Soyadi)--> Soyisim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Soyadi)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Eposta)--> E-posta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Eposta)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.KullaniciAdi)--> Kullanıcı Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Sifre)--> Şifre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sifre)
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Rol)--> Rol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>
    <hr />
    <label><p>@ViewBag.UserDeleteFailed</p></label>
    <br />
    <h5>Bu kullanıcıyı silmek istediğinize emin misiniz?</h5>

    <form asp-action="Delete" class="btn-group-sm">
        <input type="hidden" asp-for="KullaniciID" />
        <input type="submit" value="Kullanıcıyı Sil" class="btn btn-danger" /> 
        <a asp-action="All" class="btn btn-primary">Geri Dön</a>
    </form>
</div>
