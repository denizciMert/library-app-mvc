@model IEnumerable<LibraryApp.Models.UsersModel>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "_Layout";
}
<br />
<h1>Kullanıcılar</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Kullanıcı Oluştur</a> <a asp-area="" asp-controller="Home" asp-action="Panel" class="btn btn-primary">Geri Dön</a>
</p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                <!--@Html.DisplayNameFor(model => model.KullaniciID)--> Kullanıcı No.
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Adi)--> İsim
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Soyadi)--> Soyisim
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Eposta)--> E-posta
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.KullaniciAdi)--> Kullanıcı Adı
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Sifre)--> Şifre
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Rol)--> Rol
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eposta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sifre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td class="btn-group-vertical btn-group-sm">
                <a asp-action="Details" asp-route-id="@item.KullaniciID" class="btn btn-success">İncele</a> 
                <a asp-action="Edit" asp-route-id="@item.KullaniciID" class="btn btn-warning">Güncelle</a> 
                <a asp-action="Delete" asp-route-id="@item.KullaniciID" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
